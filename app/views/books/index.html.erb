<%= flash[:notice] %>
<h1>Books</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:

  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<% @books.each do |book| %>


    <span><%= link_to "Show", books_path(book.id) %></span>

    <span><%= link_to "Edit",edit_book_path(book.id)%></span>

    <span><%= link_to "Destroy", book_path(book.id) %></span>


<% end %>

<h1>New book</h1>

<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>